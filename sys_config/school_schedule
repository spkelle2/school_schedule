upstream school_schedule_server {
    server unix:/home/ubuntu/school_schedule/school_schedule/school_schedule.sock fail_timeout=0;
}

server {
    listen   80;
    server_name www.schoolschedules.org schoolschedules.org

    client_max_body_size 4G;

    access_log /home/ubuntu/school_schedule/logs/nginx-access.log;
    error_log /home/ubuntu/school_schedule/logs/nginx-error.log;

    location /static/ {
        alias   /home/ubuntu/school_schedule/school_schedule/static/;
    }

    location /media/ {
        alias   /home/ubuntu/school_schedule/school_schedule/media/;
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        if (!-f $request_filename) {
            proxy_pass http://school_schedule_server;
            break;
	}
    }
}
